---
interface Props {
	paper?: string;
	code?: string;
	models?: string;
	demo?: string;
	video?: string;
}

const { paper, code, models, demo, video } = Astro.props;

const resources = [
	{ url: paper, icon: 'fa-regular fa-file', label: 'Paper' },
	{ url: code, icon: 'fa-solid fa-code', label: 'Code' },
	{ url: models, icon: 'fa-solid fa-database', label: 'Models' },
	{ url: video, icon: 'fa-solid fa-video', label: 'Video' },
	{ url: demo, icon: 'fa-solid fa-flask', label: 'Demo' },
].filter(r => r.url);
---

<div class="flex flex-wrap justify-center gap-4 max-w-3xl mx-auto">
	{resources.map(resource => (
		<a 
			href={resource.url} 
			target={resource.label !== 'Demo' ? '_blank' : undefined}
			class="card bg-white shadow-md hover:shadow-lg transition-shadow p-6 text-center block w-32"
		>
			<span class="text-4xl block mb-2">
				<i class={resource.icon}></i>
			</span>
			<p class="text-gray-900">{resource.label}</p>
		</a>
	))}
</div>
