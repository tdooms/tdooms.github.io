---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;

// Format date nicely
const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-GB', { 
	day: 'numeric', 
	month: 'long', 
	year: 'numeric' 
});
---

<Layout>
  <div class="max-w-3xl mx-auto">
    <a href="/blog" class="text-primary hover:underline mb-4 inline-block">‚Üê Back to Blog</a>
    
    <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
    <div class="text-gray-600 mb-6">{formattedDate}</div>
    
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </div>
</Layout>
