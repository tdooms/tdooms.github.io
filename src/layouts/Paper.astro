---
import { getEntry } from 'astro:content';
import Resources from '../components/Resources.astro';
import Cite from '../components/Cite.astro';
import Authors from '../components/Authors.astro';
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
const paper = await getEntry('papers', frontmatter.slug);
---

<Layout>
  <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
  <Authors authors={paper.data.authors} />
  <div class="mt-6"></div>
  
  <Resources
    paper={paper.data.paper}
    code={paper.data.code}
    models={paper.data.models}
    demo={paper.data.demo}
  />
  
  <div class="prose prose-lg max-w-none mt-6">
    <slot />
  </div>
  
  <div class="pt-6"> </div>
<Cite bib={paper.data.bibtex} />
</Layout>